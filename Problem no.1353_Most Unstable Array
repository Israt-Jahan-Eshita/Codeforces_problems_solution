#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long int x,y,j,z;
    cin>>z;
    for(j=1;j<=z;j++)
    {
        cin>>x>>y;
        if(x==1)
        {
            cout<<"0"<<"\n";
        }
        else if(x==2)
        {
            cout<<y<<"\n";
        }
        else
        {
            cout<<2*y<<"\n";
        }
    }
    return 0;
}
