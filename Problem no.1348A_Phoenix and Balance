#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long int x,y,i,j,k,z;
    cin>>z;
    for(j=1;j<=z;j++)
    {
        cin>>x;
        y=0;
        k=2;
        for(i=1;i<=x/2;i++)
        {
            y+=k;
            k=k*2;
        }
        cout<<y<<"\n";
    }
    return 0;
}
